- var theme_customizer      = true;
- var sidebar               = true;
- var scrollbar             = true;
doctype html
html(lang='en')
  include ../../components/header-files
  body
    include ../../components/taptop
    include ../../components/loader
    // page-wrapper Start
    #pageWrapper.page-wrapper.compact-wrapper
      include ../../components/header
      // Page Body Start
      .page-body-wrapper
        include ../../components/sidebar
        .page-body
          .container-fluid
            .page-title
              .row
                .col-sm-6
                  h3
                    | Payment Details
                .col-sm-6
                  ol.breadcrumb
                    li.breadcrumb-item
                      a(href='index.html')
                        i(data-feather="home")
                    li.breadcrumb-item Ecommerce
                    li.breadcrumb-item.active Payment Details
          // Container-fluid starts
          .container-fluid.credit-card.payment-details
            .row
              // Individual column searching (text inputs) Starts
              .col-xl-8.box-col-80
                .card
                  .card-header.pb-0
                    h4 Credit card 
                  .card-body
                    .row
                      .col-md-7
                        form.theme-form.mega-form
                          .mb-3
                            input.form-control(type='text', placeholder='Card number')
                          .mb-3
                            input.form-control(type='text', placeholder='First Name')
                          .mb-3
                            input.form-control(type='date')
                          .mb-3
                            input.form-control(type='text', placeholder='Name on card')
                          div
                            select.form-select(size='1')
                              option Select Type
                              option Master
                              option Visa
                      .col-md-5.text-center.card-order
                        img.img-fluid(src='../assets/images/ecommerce/card.png', alt='')
              // Individual column searching (text inputs) Ends
              // Debit Card Starts
              .col-xl-4.col-lg-6.box-col-33.debit-card
                .card
                  .card-header.pb-0
                    h4 Debit card 
                  .card-body
                    form.theme-form.e-commerce-form.row
                      .mb-3.col-sm-6.p-r-0
                        input.form-control(type='text', placeholder='Full name here')
                      .mb-3.col-sm-6
                        input.form-control(type='text', placeholder='Card number')
                      .mb-3.col-sm-6.p-r-0
                        input.form-control(type='text', placeholder='CVV number')
                      .mb-3.col-sm-6
                        input.form-control(type='text', placeholder='CVC')
                      .col-12
                        label.col-form-label.p-b-20 Expiration Date
                      .mb-3.col-sm-6.p-r-0
                        select.form-select(size='1')
                          option Select Month
                          option Jan
                          option Fab
                          option March
                          option April
                      .mb-3.col-sm-6
                        select.form-select(size='1')
                          option Select Year
                          option 2018
                          option 2019
                          option 2020
                          option 2021
                          option 2022
                      .col-12
                        button.btn.btn-primary.btn-block(type='button', title='') Submit
              // Debit Card Ends
              // COD Starts
              .col-xl-4.col-lg-6.box-col-33
                .card
                  .card-header.pb-0
                    h4 COD
                  .card-body
                    form.theme-form.row
                      .mb-3.col-sm-6.p-r-0
                        input.form-control(type='text', placeholder='First Name')
                      .mb-3.col-sm-6
                        input.form-control(type='text', placeholder='Last name')
                      .mb-3.col-sm-6.p-r-0
                        input.form-control(type='text', placeholder='Pincode')
                      .mb-3.col-sm-6
                        input.form-control(type='number', placeholder='Enter mobile number')
                      .mb-3.col-sm-6.p-r-0
                        input.form-control(type='text', placeholder='State')
                      .mb-3.col-sm-6
                        input.form-control(type='text', placeholder='City')
                      .mb-3.col-12
                        textarea.form-control(rows='3', placeholder='Address')
                      .col-12
                        button.btn.btn-primary.btn-block(type='button', title='') Submit
              // COD Ends
              // EMI Starts
              .col-xl-4.col-lg-6.box-col-33
                .card
                  .card-header.pb-0
                    h4 EMI
                  .card-body
                    form.theme-form.row
                      .mb-3.col-sm-6.p-r-0
                        input.form-control(type='text', placeholder='First Name')
                      .mb-3.col-sm-6
                        input.form-control(type='text', placeholder='Last name')
                      .mb-3.col-sm-6.p-r-0
                        input.form-control(type='text', placeholder='Pincode')
                      .mb-3.col-sm-6
                        select.form-select(size='1')
                          option Bank Name
                          option SBI
                          option ICICI
                          option KOTAK
                          option BOB
                      .mb-3.col-12
                        select.form-select(size='1')
                          option Select Card
                          option 2
                          option 3
                          option 4
                          option 5
                      .mb-3.col-12
                        select.form-select(size='1')
                          option Select Duration
                          option 2015-2016
                          option 2016-2017
                          option 2017-2021
                          option 2021-2022
                      .mb-3.col-12
                        ul.payment-opt
                          li
                            img(src='../assets/images/ecommerce/mastercard.png', alt='')
                          li
                            img(src='../assets/images/ecommerce/visa.png', alt='')
                          li
                            img(src='../assets/images/ecommerce/paypal.png', alt='')
                      .col-12
                        button.btn.btn-primary.btn-block(type='button', title='') Submit
              // EMI Ends
              // EMI Starts
              .col-xl-4.col-lg-6.box-col-33
                .card
                  .card-header.pb-0
                    h4 Net Banking
                  .card-body
                    form.theme-form.row
                      .mb-3.col-12
                        input.form-control(type='text', placeholder='AC Holder name')
                      .mb-3.col-12
                        input.form-control(type='text', placeholder='Account number')
                      .mb-3.col-sm-6.p-r-0
                        select.form-select(size='1')
                          option Select Bank
                          option SBI
                          option ICICI
                          option KOTAK
                          option BOB
                      .mb-3.col-sm-6
                        input.form-control(type='text', placeholder='ICFC code')
                      .mb-3.col-12
                        input.form-control(type='number', placeholder='Enter mobile number')
                      .mb-3.col-12
                        input.form-control(type='text', placeholder='Other Details')
                      .col-12
                        button.btn.btn-primary.btn-block(type='button', title='') Submit
              // EMI Ends
          // Container-fluid Ends
        include ../../components/footer
    include ../../components/footer-files