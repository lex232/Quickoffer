- var chat_menu             = true;
- var theme_customizer      = true;
- var typeahead             = true;
- var typeahead_search      = true;
- var animate               = true;
- var jkanban               = true;
- var sidebar               = true;
- var scrollbar             = true;
doctype html
html(lang='en')
  include ../../components/header-files
  body
    include ../../components/taptop
    include ../../components/loader
    // page-wrapper Start
    #pageWrapper.page-wrapper.default-wrapper
      include ../../components/header
      // Page Body Start
      .page-body-wrapper
        include ../../components/sidebar
        .page-body
          .container-fluid
            .page-title
              .row
                .col-sm-6
                  h3 
                    | Kanban Board
                .col-sm-6
                  ol.breadcrumb
                    li.breadcrumb-item
                      a(href='index.html')
                        i(data-feather="home")
                    li.breadcrumb-item  Apps
                    li.breadcrumb-item.active  Kanban Board
          // Container-fluid starts
          .container-fluid.jkanban-container
            .row
              .col-12
                .card
                  .card-header.pb-0
                    h4 Default Kanban
                  .card-body.pb-0                   
                    #demo1
              .col-12
                .card.custom-board
                  .card-header.pb-0
                    .d-flex 
                      .flex-grow-1 
                        h4 Custom Board
                    p.mb-0 | colors, gutter, click on board&apos;s item and restricting which boards to drag items to                         
                  .card-body.pb-0                    
                    #demo2
              .col-12
                .card.api-board
                  .card-header.pb-0
                    h4 API
                    p.mb-0 add item, add board, delete board:                    
                  .card-body                     
                    #demo3
                    button#addDefault.btn.btn-primary Add &quot;Default&quot; board
                    button#addToDo.btn.btn-success Add element in &quot;To Do&quot; Board
                    button#removeBoard.btn.btn-danger Remove &quot;Done&quot; Board
              .col-12
                .card.note.p-20
                  | jKanban is Pure agnostic Javascript plugin for Kanban boards for more options please refer 
                  a(href="http://www.riccardotartaglia.it/jkanban/" target="_blank") jkanban Official site  
                  | And 
                  a(href="https://github.com/riktar/jkanban" target="_blank") github link
          // Container-fluid Ends
        include ../../components/footer
    include ../../components/footer-files
