      .temp-social td i{
            width:40px;
            height:40px;
            border-radius:50%;
            display:flex;
            justify-content:center;
            align-items:center;
            color:#5c61f2;       
            border:1px solid #5c61f2;
            transition:all 0.5s ease;
      }
      .temp-social td i:hover{
        background-color:#5c61f2;
        color:#ffffff;
      }   
      .temp-social td:nth-child(n+2){
         margin-left:15px;
      }
