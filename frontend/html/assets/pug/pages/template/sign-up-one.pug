- var sidebar               = false
doctype html
html(lang='en')
  include ../../components/header-files
  body
    include ../../components/loader
    // login page start
    .container-fluid.p-0 
      .row.m-0
        .col-xl-5
          img.bg-img-cover.bg-center(src="../assets/images/login/3.jpg" alt="looginpage" )
        .col-xl-7.p-0 
          .login-card
            div
              div
                a.logo.text-center(href="index.html")
                  img.img-fluid.for-light(src="../assets/images/logo/logo2.png" alt="looginpage" )                  
              .login-main 
                form.theme-form
                  h4 Create your account
                  p Enter your personal details to create account
                  .form-group
                    label.col-form-label.pt-0 Your Name
                    .row.g-2
                      .col-6
                        input.form-control(type='text', required='' placeholder='First name')
                      .col-6
                        input.form-control(type='text', required='' placeholder='Last name')
                  .form-group
                    label.col-form-label Email Address
                    input.form-control(type='email', required='' placeholder='Test@gmail.com')
                  .form-group
                    label.col-form-label Password
                    .form-input.position-relative
                      input.form-control(type='password', name='login[password]', required='' placeholder="*********")
                      .show-hide
                        span.show

                  .form-group.mb-0
                    .checkbox.p-0
                      input#checkbox1(type='checkbox')
                      label.text-muted(for='checkbox1') Agree with
                        a.ms-2(href="javascript:void(0)") Privacy Policy
                    button.btn.btn-primary.btn-block.w-100.mt-3(type='submit') Create Account
                  .login-social-title
                    h6 Or Sign in with                 
                  .form-group
                    ul.login-social
                      li
                        a(href='https://www.linkedin.com' target='_blank')
                          i(data-feather="linkedin")
                      li
                        a(href='https://twitter.com' target='_blank')
                          i(data-feather="twitter")
                      li
                        a(href='https://www.facebook.com' target='_blank')
                          i(data-feather="facebook")
                      li
                        a(href='https://www.instagram.com' target='_blank')
                          i(data-feather="instagram")
                  p.mt-4.mb-0.text-center Already have an account?
                    a.ms-2(href="login.html") Sign in
      include ../../components/footer-files